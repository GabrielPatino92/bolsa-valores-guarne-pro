# Variables de entorno para desarrollo local
# IMPORTANTE: Copia este archivo a .env.local y ajusta los valores

# Node Environment
NODE_ENV=development

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=guarne_dev
DATABASE_PASSWORD=guarne_dev_pass_2024
DATABASE_NAME=guarne_trading

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT - GENERA TU PROPIO SECRET: openssl rand -hex 32
JWT_SECRET=REEMPLAZA_CON_TU_SECRET_GENERADO_CON_OPENSSL
JWT_EXPIRES_IN=7d

# Encryption - GENERA TU PROPIA KEY: openssl rand -hex 32
# Esta clave se usa para encriptar API keys de exchanges
ENCRYPTION_KEY=REEMPLAZA_CON_TU_KEY_GENERADA_CON_OPENSSL

# MinIO (almacenamiento de archivos)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=guarne_minio
MINIO_SECRET_KEY=guarne_minio_pass_2024
MINIO_USE_SSL=false
MINIO_BUCKET=guarne-trading

# API Configuration
API_PORT=4000
API_PREFIX=api
API_VERSION=v1

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Timezone
TZ=America/Bogota

# INSTRUCCIONES:
# 1. Copia este archivo: cp .env.example .env.local
# 2. Genera claves seguras:
#    JWT_SECRET: openssl rand -hex 32
#    ENCRYPTION_KEY: openssl rand -hex 32
# 3. Reemplaza los valores REEMPLAZA_CON_TU_*
# 4. NUNCA subas .env.local a GitHub
